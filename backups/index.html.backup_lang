    <!-- Âª∂ËøüÂä†ËΩΩ Alpine.js for FAQ dropdowns -->
    <script>
      // ‰ªÖÂú®ÈúÄË¶ÅÊó∂Âä†ËΩΩ Alpine.js
      function loadAlpineJS() {
        const script = document.createElement('script');
        script.src = 'https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js';
        script.defer = true;
        document.head.appendChild(script);
      }
      
      // ÂΩìÁî®Êà∑ÊªöÂä®Âà∞FAQÂå∫ÂüüÊó∂Âä†ËΩΩ
      const faqObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            loadAlpineJS();
            faqObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });
      
      // ËßÇÂØüFAQÂå∫Âüü
      const faqSection = document.getElementById('faq');
      if (faqSection) {
        faqObserver.observe(faqSection);
      }
    </script>

    <script>
        // ÊÄßËÉΩ‰ºòÂåñÔºöÈÅøÂÖçÂº∫Âà∂ÂêåÊ≠•Â∏ÉÂ±Ä
        document.addEventListener('DOMContentLoaded', function() {
            // ÊâπÈáèDOMÊü•ËØ¢ - ÈÅøÂÖçÈáçÂ§çÊü•ËØ¢ÂØºËá¥ÁöÑÈáçÊéí
            const lazyElements = document.querySelectorAll('.lazy-load, .lazy-video');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const currentYearSpan = document.getElementById('currentYear');
            const sections = document.querySelectorAll('.section-animate');
            
            // ‰ΩøÁî® requestAnimationFrame ÊâπÈáèÂ§ÑÁêÜÂ∏ÉÂ±ÄÁõ∏ÂÖ≥Êìç‰Ωú
            function batchLayoutUpdates() {
                // ËÆæÁΩÆÂΩìÂâçÂπ¥‰ªΩ
                if (currentYearSpan) {
                    currentYearSpan.textContent = new Date().getFullYear();
                }
                
                // Mobile menu ‰∫ã‰ª∂ÁõëÂê¨
                if (mobileMenuButton && mobileMenu) {
                    mobileMenuButton.addEventListener('click', () => {
                        mobileMenu.classList.toggle('hidden');
                    });
                    
                    // ÊâπÈáèÂ§ÑÁêÜËèúÂçïÈìæÊé•‰∫ã‰ª∂
                    const mobileMenuLinks = mobileMenu.querySelectorAll('a');
                    mobileMenuLinks.forEach(link => {
                        link.addEventListener('click', () => {
                            mobileMenu.classList.add('hidden');
                        });
                    });
                }
            }
            
            // ÂàùÂßãÂåñÊáíÂä†ËΩΩËßÇÂØüÂô® - ‰ΩøÁî®Èò≤ÊäñÈÅøÂÖçÈ¢ëÁπÅËß¶Âèë
            const lazyLoadObserver = new IntersectionObserver((entries, observer) => {
                // ‰ΩøÁî® requestAnimationFrame ÊâπÈáèÂ§ÑÁêÜÂèØËßÅÂÖÉÁ¥†
                requestAnimationFrame(() => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const lazyElement = entry.target;
                            
                            if (lazyElement.classList.contains('lazy-load')) {
                                // ÂõæÁâáÊáíÂä†ËΩΩ - ÈÅøÂÖçÂêåÊ≠•Â∏ÉÂ±ÄÊü•ËØ¢
                                lazyElement.src = lazyElement.dataset.src;
                                lazyElement.onload = () => {
                                    requestAnimationFrame(() => {
                                        lazyElement.classList.add('loaded');
                                        const loadingIndicator = lazyElement.parentElement.querySelector('.loading-indicator');
                                        if (loadingIndicator) {
                                            loadingIndicator.style.display = 'none';
                                        }
                                    });
                                };
                            } else if (lazyElement.classList.contains('lazy-video')) {
                                // ËßÜÈ¢ëÊáíÂä†ËΩΩ
                                const source = lazyElement.querySelector('source');
                                if (source) {
                                    source.src = lazyElement.dataset.src;
                                    lazyElement.load();
                                }
                                const loadingIndicator = lazyElement.parentElement.querySelector('.loading-indicator');
                                if (loadingIndicator) {
                                    loadingIndicator.style.display = 'none';
                                }
                            }
                            
                            observer.unobserve(lazyElement);
                        }
                    });
                });
            }, { threshold: 0.1, rootMargin: '200px' });

            // ÊâπÈáèËßÇÂØüÊáíÂä†ËΩΩÂÖÉÁ¥†
            lazyElements.forEach(el => {
                lazyLoadObserver.observe(el);
            });

            // ÊªöÂä®Âä®ÁîªËßÇÂØüÂô® - ‰ΩøÁî®ËäÇÊµÅ
            const scrollObserver = new IntersectionObserver((entries) => {
                requestAnimationFrame(() => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('is-visible');
                            scrollObserver.unobserve(entry.target);
                        }
                    });
                });
            }, { 
                root: null,
                rootMargin: '0px',
                threshold: 0.1 
            });

            // ÊâπÈáèËßÇÂØüÊªöÂä®Âä®ÁîªÂÖÉÁ¥†
            sections.forEach(section => {
                scrollObserver.observe(section);
            });

            // ÊâßË°åÊâπÈáèÂ∏ÉÂ±ÄÊõ¥Êñ∞
            batchLayoutUpdates();
            
            // ‰ºòÂåñÂêéÁöÑÁ™óÂè£Â§ßÂ∞èË∞ÉÊï¥Â§ÑÁêÜ
            let resizeTimeout;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(() => {
                    // ‰ΩøÁî® requestAnimationFrame Á°Æ‰øùÂú®‰∏ã‰∏ÄÂ∏ßÊâßË°å
                    requestAnimationFrame(() => {
                        // ËøôÈáåÂèØ‰ª•Ê∑ªÂä†ÂìçÂ∫îÂºèË∞ÉÊï¥ÈÄªËæë
                    });
                }, 150); // 150ms Èò≤ÊäñÂª∂Ëøü
            });
        });
    </script>
