<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: 'Logo Maker' , href: canonicalUrl }]; %>
    <html lang="<%= lang %>" class="scroll-smooth">

    <head>
        <%- include('partials/head') %>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                <%= t.seo.lovart_logo.title %>
            </title>
            <meta name="description" content="<%= t.seo.lovart_logo.description %>">
            <link rel="canonical" href="<%= canonicalUrl %>">
            <%- include('partials/hreflang') %>
                <link rel="stylesheet" href="/styles.css">
                <link rel="icon" href="/favicon.ico" type="image/x-icon">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
                    crossorigin="anonymous"></script>
                <%- include('partials/analytics') %>
                    <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>
                        <script
                            type="application/ld+json"><%- JSON.stringify({ "@context": "https://schema.org", "@type": "FAQPage", "mainEntity": t.lovart_logo_page.faq.items.map(function(f){ return { "@type":"Question","name":f.q,"acceptedAnswer":{"@type":"Answer","text":f.a} }; }) }) %></script>

                        <style>
                            /* Gallery grid */
                            .logo-gallery {
                                display: grid;
                                grid-template-columns: repeat(2, 1fr);
                                gap: 1.5rem;
                            }

                            @media (min-width: 768px) {
                                .logo-gallery {
                                    grid-template-columns: repeat(4, 1fr);
                                }
                            }

                            .logo-card {
                                background: #fff;
                                border: 1px solid #e5e7eb;
                                border-radius: 0.75rem;
                                overflow: hidden;
                                transition: box-shadow 0.2s, transform 0.2s;
                            }

                            .logo-card:hover {
                                box-shadow: 0 8px 24px rgba(79, 70, 229, 0.12);
                                transform: translateY(-2px);
                            }

                            .logo-card-img {
                                background: #f8fafc;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                padding: 1.25rem;
                                height: 160px;
                            }

                            .logo-card-img img {
                                max-height: 120px;
                                width: auto;
                                max-width: 100%;
                                object-fit: contain;
                            }

                            .logo-card-body {
                                padding: 0.875rem 1rem 1rem;
                            }

                            /* Prompt copy box */
                            .prompt-snippet {
                                background: #f1f5f9;
                                border-left: 3px solid var(--color-primary);
                                border-radius: 0 0.375rem 0.375rem 0;
                                padding: 0.5rem 0.75rem;
                                font-family: ui-monospace, monospace;
                                font-size: 0.72rem;
                                color: #4338ca;
                                cursor: pointer;
                                position: relative;
                                transition: background 0.15s;
                                line-height: 1.4;
                                display: -webkit-box;
                                -webkit-line-clamp: 3;
                                line-clamp: 3;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                            }

                            .prompt-snippet:hover {
                                background: #e0e7ff;
                            }

                            .copy-btn {
                                display: block;
                                width: 100%;
                                margin-top: 0.5rem;
                                background: var(--color-primary);
                                color: white;
                                border: none;
                                border-radius: 0.375rem;
                                padding: 0.375rem 0;
                                font-size: 0.75rem;
                                font-weight: 600;
                                cursor: pointer;
                                transition: background 0.15s;
                            }

                            .copy-btn:hover {
                                background: var(--color-primary-dark);
                            }

                            .copy-btn.copied {
                                background: #16a34a;
                            }

                            /* Step cards */
                            .step-num {
                                font-size: 3rem;
                                font-weight: 900;
                                line-height: 1;
                                color: var(--color-primary);
                                opacity: 0.15;
                            }

                            /* FAQ */
                            details summary {
                                cursor: pointer;
                                list-style: none;
                            }

                            details summary::-webkit-details-marker {
                                display: none;
                            }

                            details[open] summary {
                                color: var(--color-primary);
                            }

                            details[open] summary .chevron {
                                transform: rotate(180deg);
                            }

                            .chevron {
                                transition: transform 0.2s;
                                display: inline-block;
                            }
                        </style>
    </head>

    <body class="bg-neutral-light text-neutral-dark antialiased">

        <%- include('partials/header') %>
            <%- include('partials/breadcrumb', { breadcrumbItems }) %>

                <main>

                    <!-- H1 Hero -->
                    <section class="bg-gradient-to-b from-primary/10 to-transparent py-16 lg:py-24">
                        <div class="container mx-auto px-6 text-center max-w-3xl">
                            <span
                                class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-5">
                                <%= t.lovart_logo_page.hero.badge %>
                            </span>
                            <h1 class="text-4xl md:text-5xl font-bold mb-5 text-neutral-dark">
                                <%= t.lovart_logo_page.hero.title %>
                            </h1>
                            <p class="text-xl text-neutral mb-8 leading-relaxed max-w-2xl mx-auto">
                                <%= t.lovart_logo_page.hero.subtitle %>
                            </p>
                            <a href="<%= link('lovart-free') %>"
                                class="inline-flex items-center px-8 py-4 bg-primary text-white text-lg font-semibold rounded-lg shadow-lg hover:bg-primary-dark transition-all transform hover:-translate-y-1">
                                <%= t.lovart_logo_page.hero.cta %> â†’
                            </a>
                        </div>
                    </section>

                    <!-- Ad Slot 1 -->
                    <div class="container mx-auto px-6 max-w-5xl my-8">
                        <%- include('partials/adsense', { format: 'horizontal' }) %>
                    </div>

                    <!-- H2 Gallery -->
                    <section class="container mx-auto px-6 max-w-5xl my-12">
                        <h2 class="text-3xl font-bold text-neutral-dark mb-2 text-center">
                            <%= t.lovart_logo_page.gallery.heading %>
                        </h2>
                        <p class="text-neutral text-center mb-4 max-w-2xl mx-auto">
                            <%= t.lovart_logo_page.gallery.subheading %>
                        </p>
                        <p class="text-neutral text-center mb-10 max-w-2xl mx-auto text-sm leading-relaxed">
                            Every <strong>lovart logo</strong> below was created with one text prompt inside the Lovart
                            logo maker. Browse each <strong>lovart logo</strong> style, copy its prompt, and paste it
                            into Lovart to generate your own version instantly. From minimalist tech <strong>lovart
                                logo</strong> designs to vintage artisan badges, each style is immediately
                            download-ready as a high-resolution PNG â€” perfect for websites, business cards, and social
                            media profiles.
                        </p>

                        <div class="logo-gallery">
                            <% t.lovart_logo_page.gallery.items.forEach(function(item, idx) { %>

                                <% if (idx===4) { %>
                                    <% } %>

                                        <div class="logo-card">
                                            <div class="logo-card-img">
                                                <img src="/images/logo-gallery/<%= item.file %>"
                                                    alt="<%= t.image_context ? t.image_context['logo.' + item.file.replace('.png','')]  : item.title + ' lovart logo example' %>"
                                                    loading="lazy" width="200" height="120">
                                            </div>
                                            <div class="logo-card-body">
                                                <h3 class="text-sm font-bold text-neutral-dark mb-1">
                                                    <%= item.title %>
                                                </h3>
                                                <span
                                                    class="inline-block text-xs text-primary bg-primary/10 px-2 py-0.5 rounded-full mb-2">
                                                    <%= item.industry %>
                                                </span>
                                                <div class="prompt-snippet" data-prompt="<%= item.prompt %>">
                                                    <%= item.prompt %>
                                                </div>
                                                <button class="copy-btn" data-target="<%= idx %>">
                                                    ðŸ“‹ <%= t.lovart_logo_page.gallery.copy_label %>
                                                </button>
                                            </div>
                                        </div>

                                        <% }) %>
                        </div>

                        <!-- Ad Slot 2 (after gallery) -->
                        <div class="mt-10">
                            <%- include('partials/adsense', { format: 'square' }) %>
                        </div>
                    </section>

                    <p class="text-neutral text-center mb-10 max-w-2xl mx-auto text-sm">
                        A <strong>lovart logo</strong> created with the Lovart logo maker is immediately usable for
                        digital purposes: website headers, social media profiles, app icons, and email signatures. Each
                        <strong>lovart logo</strong> is generated as a high-resolution PNG with a clean background, so
                        you can use it across all your brand touch-points without any additional editing. The Lovart
                        logo maker supports iteration â€” generate a dozen <strong>lovart logo</strong> variations in
                        minutes and pick the one that resonates most with your target audience.
                    </p>
                    <section class="bg-white py-16 my-4">
                        <div class="container mx-auto px-6 max-w-4xl">
                            <h2 class="text-3xl font-bold text-neutral-dark mb-12 text-center">
                                <%= t.lovart_logo_page.howto.heading %>
                            </h2>
                            <div class="grid md:grid-cols-3 gap-8">
                                <% t.lovart_logo_page.howto.steps.forEach(function(step) { %>
                                    <div class="text-center md:text-left">
                                        <div class="step-num">
                                            <%= step.num %>
                                        </div>
                                        <h3 class="text-lg font-bold text-neutral-dark mb-2 mt-1">
                                            <%= step.title %>
                                        </h3>
                                        <p class="text-neutral text-sm leading-relaxed">
                                            <%= step.desc %>
                                        </p>
                                    </div>
                                    <% }) %>
                            </div>
                            <div class="text-center mt-12">
                                <a href="<%= link('lovart-free') %>"
                                    class="inline-flex items-center px-8 py-4 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all shadow">
                                    Try the Lovart Logo Maker Free â†’
                                </a>
                            </div>
                        </div>
                    </section>

                    <!-- Ad Slot 3 -->
                    <div class="container mx-auto px-6 max-w-4xl my-8">
                        <%- include('partials/adsense', { format: 'horizontal' }) %>
                    </div>

                    <!-- H2 FAQ -->
                    <section class="container mx-auto px-6 max-w-3xl my-12">
                        <h2 class="text-3xl font-bold text-neutral-dark mb-8 text-center">
                            <%= t.lovart_logo_page.faq.heading %>
                        </h2>
                        <div class="space-y-3">
                            <% t.lovart_logo_page.faq.items.forEach(function(faq) { %>
                                <details class="bg-white border border-neutral-light rounded-lg px-5 py-4 group">
                                    <summary
                                        class="flex justify-between items-center font-semibold text-neutral-dark text-sm md:text-base">
                                        <h3 class="m-0 font-semibold">
                                            <%= faq.q %>
                                        </h3>
                                        <span class="chevron text-primary ml-4 flex-shrink-0">â–¾</span>
                                    </summary>
                                    <p class="mt-3 text-neutral text-sm leading-relaxed border-t border-gray-100 pt-3">
                                        <%= faq.a %>
                                    </p>
                                </details>
                                <% }) %>
                        </div>
                    </section>

                    <!-- Final CTA -->
                    <section class="bg-gradient-to-r from-primary to-primary-light py-20 mt-4">
                        <div class="container mx-auto px-6 text-center">
                            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                                <%= t.lovart_logo_page.cta.title %>
                            </h2>
                            <p class="text-lg text-white/80 max-w-xl mx-auto mb-8">
                                <%= t.lovart_logo_page.cta.desc %>
                            </p>
                            <a href="<%= link('lovart-free') %>"
                                class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary text-lg font-semibold rounded-lg shadow-lg hover:bg-neutral-light transition-all transform hover:-translate-y-1">
                                <%= t.lovart_logo_page.cta.button %> â†’
                            </a>
                        </div>
                    </section>

                </main>

                <%- include('partials/footer') %>

                    <script>
                        // Mobile menu
                        const btn = document.getElementById('mobile-menu-button');
                        const menu = document.getElementById('mobile-menu');
                        if (btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
                        const yr = document.getElementById('currentYear');
                        if (yr) yr.textContent = new Date().getFullYear();

                        // Copy-to-clipboard for prompts
                        document.querySelectorAll('.copy-btn').forEach(function (btn) {
                            btn.addEventListener('click', function () {
                                const snippet = btn.previousElementSibling;
                                const text = snippet ? snippet.getAttribute('data-prompt') : '';
                                if (!text) return;
                                navigator.clipboard.writeText(text).then(function () {
                                    btn.textContent = '\u2705 Copied!';
                                    btn.classList.add('copied');
                                    setTimeout(function () {
                                        btn.textContent = '\uD83D\uDCCB Copy Prompt';
                                        btn.classList.remove('copied');
                                    }, 2000);
                                });
                            });
                        });
                    </script>

    </body>

    </html>