    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
        crossorigin="anonymous"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-EK9MPTEZ17"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-EK9MPTEZ17');
    </script>

    <style>
        .section-animate {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .section-animate.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        .blog-card {
            transition: all 0.3s ease;
        }

        .blog-card:hover {
            transform: translateY(-5px);
        }

        .category-pill {
            transition: all 0.2s ease;
        }

        .category-pill:hover {
            transform: scale(1.05);
        }

        /* AdSense 占位符样式 */
        .ad-slot-container {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f3f4f6;
            min-height: 280px;
            margin: 2rem 0;
            position: relative;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .ad-slot-container::before {
            content: 'Advertisement';
            position: absolute;
            color: #9ca3af;
            font-size: 0.875rem;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 0;
        }

        .ad-slot-container ins {
            z-index: 1;
            background: white;
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#4f46e5',
                            light: '#6366f1',
                            dark: '#3730a3',
