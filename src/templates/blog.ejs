<%
const blogCategoryFilters = [
    { key: 'all', slug: 'all', href: link('/blog') },
    { key: 'ai_design', slug: 'ai-design', href: link('/blog?category=ai-design') },
    { key: 'tutorials', slug: 'tutorials', href: link('/blog?category=tutorials') },
    { key: 'industry', slug: 'industry', href: link('/blog?category=industry') },
    { key: 'updates', slug: 'updates', href: link('/blog?category=updates') },
    { key: 'stories', slug: 'stories', href: link('/blog?category=stories') }
];

const blogFeaturedSlug = 'how-ai-is-reshaping-modern-design-workflows';
const latestPostSlugs = [
    'master-lovart-ai-design-in-5-minutes',
    'ui-ux-design-trends-2024',
    'how-designers-boost-efficiency-with-lovart',
    'ai-assisted-product-design-best-practices',
    'break-creative-block-with-ai-inspiration',
    'lovart-january-update-new-features'
];
const latestPostImages = [
    '/images/small_03.jpg',
    '/images/02.jpg',
    '/images/05.jpg',
    '/images/06.jpg',
    '/images/07.jpg',
    '/images/08.jpg'
];
const latestPostCategorySlugs = ['tutorials', 'industry', 'stories', 'ai-design', 'ai-design', 'updates'];
const latestPostIsoDates = ['2024-01-12', '2024-01-10', '2024-01-08', '2024-01-05', '2024-01-03', '2024-01-01'];

function toAbsoluteBlogUrl(relativeOrAbsoluteUrl) {
    if (!relativeOrAbsoluteUrl || typeof relativeOrAbsoluteUrl !== 'string') {
        return canonicalUrl;
    }

    if (/^https?:\/\//i.test(relativeOrAbsoluteUrl)) {
        return relativeOrAbsoluteUrl;
    }

    const normalizedPath = relativeOrAbsoluteUrl.startsWith('/') ? relativeOrAbsoluteUrl : `/${relativeOrAbsoluteUrl}`;
    return `https://lovart.info${normalizedPath}`;
}

function getShareLinks(relativeUrl, title) {
    const absoluteUrl = toAbsoluteBlogUrl(relativeUrl);
    const encodedUrl = encodeURIComponent(absoluteUrl);
    const encodedTitle = encodeURIComponent(title || 'Lovart Blog');

    return {
        facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
        x: `https://x.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
        linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`
    };
}

const featuredPost = {
    slug: blogFeaturedSlug,
    url: link(`/blog-${blogFeaturedSlug}`),
    title: t.blog_page.featured.article_title,
    desc: t.blog_page.featured.desc,
    tag: t.blog_page.featured.tag,
    date: t.blog_page.featured.date,
    datePublished: '2024-01-15',
    author: t.blog_page.featured.author,
    authorRole: t.blog_page.featured.role,
    categorySlug: 'ai-design',
    image: '/images/01.jpg',
    thumb: '/images/thumb-01.jpg'
};
const featuredPostShareLinks = getShareLinks(featuredPost.url, featuredPost.title);

const latestPosts = t.blog_page.latest.posts.map((post, index) => {
    const slug = latestPostSlugs[index] || `blog-post-${index + 1}`;
    const url = link(`/blog-${slug}`);

    return {
        ...post,
        slug,
        url,
        image: latestPostImages[index] || '/images/placeholder.jpg',
        thumb: latestPostImages[index] || '/images/placeholder.jpg',
        categorySlug: latestPostCategorySlugs[index] || 'ai-design',
        datePublished: latestPostIsoDates[index] || '2024-01-01',
        shareLinks: getShareLinks(url, post.title)
    };
});

const blogPosts = [featuredPost, ...latestPosts].map((post) => ({
    ...post,
    absoluteUrl: toAbsoluteBlogUrl(post.url),
    shareLinks: getShareLinks(post.url, post.title)
}));

const blogTagLinks = [
    { label: t.blog_page.categories.ai_design, href: link('/blog?category=ai-design') },
    { label: t.blog_page.categories.tutorials, href: link('/blog?category=tutorials') },
    { label: t.blog_page.categories.industry, href: link('/blog?category=industry') },
    { label: t.blog_page.categories.updates, href: link('/blog?category=updates') },
    { label: t.blog_page.categories.stories, href: link('/blog?category=stories') }
];

const breadcrumbItems = [{ name: t.nav.home, href: link('/') }, { name: t.nav.blog, href: canonicalUrl }];
const categoryCounts = blogPosts.reduce((acc, post) => {
    acc[post.categorySlug] = (acc[post.categorySlug] || 0) + 1;
    return acc;
}, {});
const defaultCategoryCount = blogPosts.length;
const blogUiMessageMap = {
    en: {
        postSingular: 'post',
        postPlural: 'posts',
        emptyCategory: 'No posts found for this category yet.',
        blocked: 'Submission blocked.',
        invalidEmail: 'Please enter a valid email address.',
        confirmMail: 'Please confirm the subscription email in your mail app.'
    },
    zh: {
        postSingular: '篇文章',
        postPlural: '篇文章',
        emptyCategory: '该分类暂无文章。',
        blocked: '提交已拦截。',
        invalidEmail: '请输入有效邮箱地址。',
        confirmMail: '请在邮件应用中确认订阅。'
    },
    fr: {
        postSingular: 'article',
        postPlural: 'articles',
        emptyCategory: 'Aucun article dans cette catégorie pour le moment.',
        blocked: 'Soumission bloquée.',
        invalidEmail: 'Veuillez saisir une adresse e-mail valide.',
        confirmMail: "Veuillez confirmer l'abonnement dans votre application mail."
    },
    ja: {
        postSingular: '件の記事',
        postPlural: '件の記事',
        emptyCategory: 'このカテゴリにはまだ記事がありません。',
        blocked: '送信はブロックされました。',
        invalidEmail: '有効なメールアドレスを入力してください。',
        confirmMail: 'メールアプリで購読を確認してください。'
    }
};
const blogUiMessages = blogUiMessageMap[lang] || blogUiMessageMap.en;
