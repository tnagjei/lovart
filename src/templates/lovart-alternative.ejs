<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: t.lovart_alternative_page.seo.title, href:
    canonicalUrl }]; %>
    <html lang="<%- lang %>">

    <head>
        <%- include('partials/head', { seo: t.lovart_alternative_page.seo }) %>
            <link rel="canonical" href="<%= canonicalUrl %>">
            <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>
                <%- include('partials/hreflang') %>
                    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Lovart AI",
      "applicationCategory": "DesignApplication",
      "operatingSystem": "WebBrowser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
    </script>
                    <%- include('partials/schema-faq', { faqItems: t.lovart_alternative_page.faq.items }) %>
                        <style>
                            .page-header {
                                background: linear-gradient(135deg, #2B86C5 0%, #FF3CAC 100%);
                                color: white;
                                padding: 60px 0;
                                text-align: center;
                            }

                            .page-header h1 {
                                font-size: 3rem;
                                margin-bottom: 20px;
                                font-weight: 800;
                                letter-spacing: -0.02em;
                            }

                            .page-header p {
                                font-size: 1.25rem;
                                opacity: 0.9;
                                max-width: 800px;
                                margin: 0 auto 30px;
                                line-height: 1.6;
                            }

                            .badge {
                                display: inline-block;
                                background: rgba(255, 255, 255, 0.2);
                                backdrop-filter: blur(10px);
                                padding: 8px 16px;
                                border-radius: 20px;
                                font-size: 0.9rem;
                                font-weight: 600;
                                margin-bottom: 20px;
                                text-transform: uppercase;
                                letter-spacing: 1px;
                            }

                            .content-section {
                                padding: 80px 0;
                                background: #fdfdfd;
                            }

                            .card {
                                background: white;
                                border-radius: 20px;
                                padding: 40px;
                                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                                margin-bottom: 40px;
                            }

                            .card h2 {
                                font-size: 2rem;
                                margin-bottom: 20px;
                                color: #1a1a1a;
                                font-weight: 700;
                            }

                            .compare-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-top: 30px;
                                background: white;
                                border-radius: 12px;
                                overflow: hidden;
                                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
                            }

                            .compare-table th,
                            .compare-table td {
                                padding: 20px;
                                text-align: left;
                                border-bottom: 1px solid #eee;
                            }

                            .compare-table th {
                                background: #f8f9fa;
                                font-weight: 700;
                                color: #333;
                                font-size: 1.1rem;
                            }

                            .compare-table th:nth-child(2) {
                                background: rgba(43, 134, 197, 0.1);
                                color: #2B86C5;
                            }

                            .compare-table tr:last-child td {
                                border-bottom: none;
                            }

                            .compare-table td:first-child {
                                font-weight: 600;
                                color: #555;
                                width: 25%;
                            }

                            .compare-table td:nth-child(2) {
                                background: rgba(43, 134, 197, 0.02);
                            }

                            .competitor-list {
                                display: grid;
                                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                                gap: 30px;
                                margin-top: 30px;
                            }

                            .competitor-card {
                                padding: 25px;
                                border-radius: 12px;
                                border: 1px solid #eee;
                                background: #fafafa;
                            }

                            .competitor-card h3 {
                                color: #333;
                                margin-top: 0;
                                margin-bottom: 15px;
                                font-size: 1.25rem;
                            }

                            .competitor-card p {
                                color: #666;
                                margin: 0;
                                line-height: 1.6;
                            }

                            .faq-item {
                                border-bottom: 1px solid #eee;
                                padding: 25px 0;
                            }

                            .faq-item:last-child {
                                border-bottom: none;
                                padding-bottom: 0;
                            }

                            .faq-question {
                                font-weight: 600;
                                font-size: 1.2rem;
                                color: #1a1a1a;
                                margin-bottom: 10px;
                                display: flex;
                                align-items: flex-start;
                                gap: 10px;
                            }

                            .faq-answer {
                                color: #666;
                                line-height: 1.6;
                                margin: 0;
                                padding-left: 34px;
                            }

                            .cta-buttons {
                                display: flex;
                                justify-content: center;
                                gap: 15px;
                                margin-top: 20px;
                            }

                            @media (max-width: 768px) {
                                .page-header {
                                    padding: 40px 0;
                                }

                                .page-header h1 {
                                    font-size: 2.2rem;
                                }

                                .compare-table {
                                    display: block;
                                    overflow-x: auto;
                                    white-space: nowrap;
                                }

                                .cta-buttons {
                                    flex-direction: column;
                                }

                                .cta-buttons a {
                                    width: 100%;
                                }

                                .card {
                                    padding: 25px;
                                }
                            }
                        </style>
    </head>

    <body>
        <%- include('partials/header') %>

            <main>
                <header class="page-header">
                    <div class="container">
                        <span class="badge">
                            <%= t.lovart_alternative_page.hero.badge %>
                        </span>
                        <h1>
                            <%= t.lovart_alternative_page.hero.title %>
                        </h1>
                        <p>
                            <%= t.lovart_alternative_page.hero.subtitle %>
                        </p>
                        <div class="cta-buttons">
                            <a href="https://lovart.ai" target="_blank" rel="noopener nofollow"
                                class="btn btn-primary btn-lg">
                                <%= t.lovart_alternative_page.hero.cta_external %>
                            </a>
                            <a href="<%- link('/lovart-free') %>" class="btn btn-secondary btn-lg">
                                <%= t.lovart_alternative_page.hero.cta_internal %>
                            </a>
                        </div>
                    </div>
                </header>

                <section class="content-section">
                    <div class="container" style="max-width: 900px;">

                        <div class="card">
                            <p class="lead"
                                style="font-size: 1.15rem; color: #555; line-height: 1.8; margin-bottom: 0;"><%-
                                    t.lovart_alternative_page.hero.content %></p>
                        </div>

                        <div class="card">
                            <h2>
                                <%= t.lovart_alternative_page.why_alternative.heading %>
                            </h2>
                            <p style="color: #666; line-height: 1.7; font-size: 1.05rem;">
                                <%= t.lovart_alternative_page.why_alternative.desc %>
                            </p>
                        </div>

                        <%- include('partials/adsense') %>

                            <div class="card" id="lovart-vs-canva">
                                <h2>
                                    <%= t.lovart_alternative_page.vs_canva.heading %>
                                </h2>
                                <p style="color: #666; margin-bottom: 20px;">
                                    <%= t.lovart_alternative_page.vs_canva.desc %>
                                </p>

                                <div style="overflow-x: auto;">
                                    <table class="compare-table">
                                        <thead>
                                            <tr>
                                                <th>Feature Aspect</th>
                                                <th>Lovart AI</th>
                                                <th>Canva</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% t.lovart_alternative_page.vs_canva.rows.forEach(function(row) { %>
                                                <tr>
                                                    <td>
                                                        <%= row.aspect %>
                                                    </td>
                                                    <td><strong>
                                                            <%= row.lovart %>
                                                        </strong></td>
                                                    <td>
                                                        <%= row.canva %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="card">
                                <h2>
                                    <%= t.lovart_alternative_page.other_mentions.heading %>
                                </h2>
                                <div class="competitor-list">
                                    <% t.lovart_alternative_page.other_mentions.items.forEach(function(item) { %>
                                        <div class="competitor-card">
                                            <h3>
                                                <%= item.title %>
                                            </h3>
                                            <p>
                                                <%= item.desc %>
                                            </p>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>

                            <%- include('partials/adsense') %>

                                <div class="card">
                                    <h2>
                                        <%= t.lovart_alternative_page.how_to_choose.heading %>
                                    </h2>
                                    <p style="color: #555; line-height: 1.7;">
                                        <%= t.lovart_alternative_page.how_to_choose.desc %>
                                    </p>
                                    <a href="<%- link('/lovart-pricing') %>" class="btn btn-outline-primary mt-3">View
                                        Lovart Plans â†’</a>
                                </div>

                                <div class="card" id="faq">
                                    <h2>
                                        <%= t.lovart_alternative_page.faq.heading %>
                                    </h2>
                                    <div class="faq-list">
                                        <% t.lovart_alternative_page.faq.items.forEach(function(item) { %>
                                            <div class="faq-item">
                                                <h3 class="faq-question">
                                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                        stroke="#2B86C5" stroke-width="2" stroke-linecap="round"
                                                        stroke-linejoin="round" style="flex-shrink: 0;">
                                                        <circle cx="12" cy="12" r="10"></circle>
                                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                                    </svg>
                                                    <%= item.q %>
                                                </h3>
                                                <p class="faq-answer">
                                                    <%= item.a %>
                                                </p>
                                            </div>
                                            <% }); %>
                                    </div>
                                </div>

                                <div style="text-align: center; margin-top: 40px;">
                                    <%- include('partials/adsense') %>
                                </div>

                    </div>
                </section>
            </main>

            <%- include('partials/footer') %>
    </body>

    </html>