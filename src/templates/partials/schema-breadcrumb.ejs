<!-- Breadcrumb Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://lovart.info/<%= isDefault ? '' : lang + '/' %>"
    }<% if (pageName !== 'index') { %>,
    {
      "@type": "ListItem",
      "position": 2,
      "name": "<%= breadcrumbName || pageName %>",
      "item": "<%= canonicalUrl %>"
    }<% } %>
  ]
}
</script>