<!-- hreflang tags for multilingual SEO -->
<% const baseUrl='https://lovart.info' ; %>
    <% supportedLangs.forEach(function(hrefLang) { %>
        <% let hrefPath; if (pageName==='index' ) { hrefPath=hrefLang==='en' ? '' : `${hrefLang}/`; } else {
            hrefPath=hrefLang==='en' ? `${pageName}` : `${hrefLang}/${pageName}`; } %>
            <link rel="alternate" hreflang="<%= hrefLang %>" href="<%= baseUrl %>/<%= hrefPath %>">
            <% }); %>
                <% const defaultHrefPath=pageName==='index' ? '' : `${pageName}`; %>
                    <link rel="alternate" hreflang="x-default" href="<%= baseUrl %>/<%= defaultHrefPath %>">