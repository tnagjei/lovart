<% if (Array.isArray(breadcrumbItems) && breadcrumbItems.length > 1) { %>
<nav class="bg-white border-b border-gray-200" aria-label="<%= (t.breadcrumb && t.breadcrumb.aria_label) || 'Breadcrumb' %>">
    <div class="container mx-auto px-6 py-3">
        <ol class="flex flex-wrap items-center gap-2 text-sm text-neutral">
            <% breadcrumbItems.forEach(function(item, index) { %>
                <% const isLast = index === breadcrumbItems.length - 1; %>
                <li class="flex items-center gap-2">
                    <% if (!isLast && item.href) { %>
                        <a href="<%= item.href %>" class="hover:text-primary transition-colors">
                            <%= item.name %>
                        </a>
                    <% } else { %>
                        <span class="font-medium text-neutral-dark" aria-current="page">
                            <%= item.name %>
                        </span>
                    <% } %>

                    <% if (!isLast) { %>
                        <span aria-hidden="true" class="text-gray-400">/</span>
                    <% } %>
                </li>
            <% }); %>
        </ol>
    </div>
</nav>
<% } %>
