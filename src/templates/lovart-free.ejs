                                </div>
                            </div>
                        </section>

                        <!-- Steps to Start -->
                        <section class="py-20 bg-white">
                            <div class="container mx-auto px-6 max-w-4xl">
                                <h2 class="text-3xl font-bold text-center mb-16">
                                    <%= t.lovart_free_page.how_to.title %>
                                </h2>
                                <div class="relative">
                                    <div
                                        class="hidden md:block absolute left-1/2 top-0 bottom-0 w-1 bg-primary/10 -translate-x-1/2 rounded-full">
                                    </div>

                                    <% [1, 2, 3].forEach((num)=> {
                                        const step = t.lovart_free_page.how_to['step' + num];
                                        %>
                                        <div
                                            class="relative flex flex-col md:flex-row items-center justify-between mb-12 md:mb-24 last:mb-0 group">
                                            <div
                                                class="md:w-5/12 <%= num % 2 === 0 ? 'md:order-2 text-left md:text-left' : 'text-left md:text-right' %>">
                                                <h3
                                                    class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary-dark mb-2">
                                                    <%= step.title %>
                                                </h3>
                                                <p class="text-neutral text-lg">
                                                    <%= step.desc %>
                                                </p>
                                            </div>
                                            <div
                                                class="absolute left-1/2 md:left-1/2 -top-4 md:top-1/2 w-10 h-10 bg-white border-4 border-primary rounded-full flex items-center justify-center -translate-x-1/2 md:-translate-y-1/2 shadow-lg z-10 text-primary font-bold">
                                                <%= num %>
                                            </div>
                                            <div class="md:w-5/12 <%= num % 2 === 0 ? 'md:order-1' : '' %>"></div>
