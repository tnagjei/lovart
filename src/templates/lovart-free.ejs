                                                    <%= t.lovart_free_page.comparison.headers[3] %>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-100">
                                            <% t.lovart_free_page.comparison.rows.forEach(row=> { %>
                                                <tr class="hover:bg-gray-50 transition-colors">
                                                    <td class="p-4 md:p-6 font-medium text-neutral-dark">
                                                        <%= row.name %>
                                                    </td>
                                                    <td class="p-4 md:p-6 font-medium text-primary bg-primary/5">
                                                        <%= row.free %>
                                                    </td>
                                                    <td class="p-4 md:p-6 text-neutral">
                                                        <%= row.pro %>
                                                    </td>
                                                    <td class="p-4 md:p-6 text-neutral">
                                                        <%= row.enterprise %>
