                                        <% }) %>
                                </div>
                            </div>
                        </section>

                        <!-- FAQ Section -->
                        <section class="py-20 bg-neutral-light/30">
                            <div class="container mx-auto px-6 max-w-3xl">
                                <h2 class="text-3xl font-bold text-center mb-12">
                                    <%= t.lovart_free_page.faq.title %>
                                </h2>
                                <div class="space-y-4">
                                    <% t.lovart_free_page.faq.items.forEach((item, index)=> { %>
                                        <div
                                            class="bg-white rounded-lg shadow-sm overflow-hidden faq-item cursor-pointer group">
                                            <div class="p-6 flex justify-between items-center"
                                                onclick="toggleFaq(this)">
                                                <h3
                                                    class="font-semibold text-lg pr-8 text-neutral-dark group-hover:text-primary transition-colors">
                                                    <%= item.q %>
                                                </h3>
                                                <span
                                                    class="transform transition-transform duration-300 text-primary text-xl">
                                                    +
                                                </span>
                                            </div>
                                            <div
                                                class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out px-6 faq-content">
                                                <p
                                                    class="pb-6 text-neutral leading-relaxed border-t border-gray-100 pt-4">
