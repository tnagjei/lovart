</head>

<body class="bg-neutral-light text-neutral-dark antialiased">

    <!-- Header -->
    <%- include('partials/header') %>

    <%- include('partials/breadcrumb', { breadcrumbItems }) %>
        <main class="min-h-screen">
            <!-- Hero Section -->
            <section class="bg-gradient-to-br from-primary to-secondary text-white py-16">
                <div class="container mx-auto px-6 text-center">
                    <h1 class="text-4xl md:text-5xl font-bold mb-6">
                        <%= t.terms_page.hero.title %>
                    </h1>
                    <p class="text-lg md:text-xl max-w-3xl mx-auto">
                        <%= t.terms_page.hero.desc %>
                    </p>
                    <div class="mt-8 text-sm opacity-80">
                        <%= t.terms_page.hero.last_updated %>
                    </div>
                </div>
            </section>

            <section class="py-8 bg-white">
                <div class="container mx-auto px-6 max-w-4xl space-y-5">
                    <%- include('partials/official-disclaimer', { supportCluster, verificationDate: supportCluster.last_verified }) %>
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-blue-900 mb-2">
                            <%= termsBridge.title || 'Official Terms of Use Link' %>
                        </h2>
                        <p class="text-blue-900 mb-4">
                            <%= termsBridge.desc || 'For binding legal clauses and latest updates, refer to the official Lovart terms page.' %>
                        </p>
                        <a href="<%= termsBridge.url || 'https://www.lovart.ai/statement/terms-of-use' %>" target="_blank" rel="noopener noreferrer"
                            class="inline-flex items-center text-primary hover:text-primary-dark font-medium">
                            <%= termsBridge.cta || 'Open official terms' %> â†’
                        </a>
                    </div>
                </div>
            </section>

            <!-- Table of Contents -->
            <section class="py-12 bg-white">
                <div class="container mx-auto px-6">
                    <div class="max-w-4xl mx-auto">
                        <h2 class="text-2xl font-bold text-neutral-dark mb-6">
                            <%= t.terms_page.toc.title %>
                        </h2>
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                <h3 class="font-semibold text-primary mb-3">
                                    <%= t.terms_page.toc.basic_terms.title %>
                                </h3>
                                <ul class="space-y-2 text-sm">
                                    <li><a href="#acceptance"
                                            class="text-neutral hover:text-primary transition-colors toc-link">
                                            <%= t.terms_page.toc.basic_terms.items[0] %>
                                        </a>
                                    </li>
                                    <li><a href="#description"
                                            class="text-neutral hover:text-primary transition-colors toc-link">
                                            <%= t.terms_page.toc.basic_terms.items[1] %>
                                        </a>
                                    </li>
                                    <li><a href="#registration"
                                            class="text-neutral hover:text-primary transition-colors toc-link">
                                            <%= t.terms_page.toc.basic_terms.items[2] %>
                                        </a>
                                    </li>
