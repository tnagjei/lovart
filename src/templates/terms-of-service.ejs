<!DOCTYPE html>
<%
const breadcrumbItems = [{ name: t.nav.home, href: link('/') }, { name: t.breadcrumb.pages.terms_of_service, href: canonicalUrl }];
const supportCluster = t.support_cluster || {};
const termsBridge = supportCluster.terms_bridge || {};
%>
<html lang="<%= lang %>" class="scroll-smooth">

<head>
    <%- include('partials/head') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= t.terms_page.seo.title %>
        </title>
        <meta name="description" content="<%= t.terms_page.seo.description %>">
        <meta name="keywords" content="<%= t.terms_page.seo.keywords %>">
        <link rel="canonical" href="<%= canonicalUrl %>">
        <%- include('partials/hreflang') %>
            <link rel="stylesheet" href="/styles.css">
            <link rel="icon" href="/favicon.ico" type="image/x-icon">
            <script async
                src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
                crossorigin="anonymous"></script>

            <%- include('partials/analytics') %>

                <style>
                    .section-animate {
                        opacity: 0;
                        transform: translateY(30px);
                        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
                    }

                    .section-animate.is-visible {
                        opacity: 1;
                        transform: translateY(0);
                    }

                    .toc-link {
                        scroll-margin-top: 100px;
                    }
