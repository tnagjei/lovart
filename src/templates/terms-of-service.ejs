                                    <%= t.terms_page.sections[1].content[2] %>
                                </p>
                            </div>
                        </div>

                        <!-- Section 3 -->
                        <div id="registration" class="section-animate">
                            <h2 class="text-3xl font-bold text-neutral-dark mb-6">
                                <%= t.terms_page.sections[2].title %>
                            </h2>
                            <div class="bg-white p-8 rounded-lg shadow-lg">
                                <h3 class="text-xl font-semibold text-neutral-dark mb-4">
                                    <%= t.terms_page.sections[2].subsections[0].title %>
                                </h3>
                                <p class="text-neutral mb-4">
                                    <%= t.terms_page.sections[2].subsections[0].content %>
                                </p>

                                <h3 class="text-xl font-semibold text-neutral-dark mb-4">
                                    <%= t.terms_page.sections[2].subsections[1].title %>
                                </h3>
