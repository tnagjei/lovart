<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: t.lovart_tutorial_page.seo.title, href:
    canonicalUrl }]; %>
    <html lang="<%- lang %>">

    <head>
        <%- include('partials/head', { seo: t.lovart_tutorial_page.seo }) %>
            <link rel="canonical" href="<%= canonicalUrl %>">
            <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>
                <%- include('partials/hreflang') %>
                    <%- include('partials/schema-faq', { faqItems: t.lovart_tutorial_page.faq.items }) %>
                        <style>
                            .page-header {
                                background: linear-gradient(135deg, #1fa2ff 0%, #12d8fa 50%, #a6ffcb 100%);
                                color: #1a1a1a;
                                padding: 60px 0;
                                text-align: center;
                            }

                            .page-header h1 {
                                font-size: 3rem;
                                margin-bottom: 20px;
                                font-weight: 800;
                                letter-spacing: -0.02em;
                            }

                            .page-header p {
                                font-size: 1.25rem;
                                opacity: 0.9;
                                max-width: 800px;
                                margin: 0 auto 30px;
                                line-height: 1.6;
                                color: #333;
                            }

                            .badge {
                                display: inline-block;
                                background: rgba(0, 0, 0, 0.1);
                                backdrop-filter: blur(10px);
                                padding: 8px 16px;
                                border-radius: 20px;
                                font-size: 0.9rem;
                                font-weight: 600;
                                margin-bottom: 20px;
                                text-transform: uppercase;
                                letter-spacing: 1px;
                                color: #333;
                            }

                            .content-section {
                                padding: 80px 0;
                                background: #fafafa;
                            }

                            .card {
                                background: white;
                                border-radius: 20px;
                                padding: 40px;
                                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                                margin-bottom: 40px;
                            }

                            .card h2 {
                                font-size: 2rem;
                                margin-bottom: 20px;
                                color: #1a1a1a;
                                font-weight: 700;
                            }

                            .step-container {
                                display: flex;
                                flex-direction: column;
                                gap: 30px;
                                margin-top: 30px;
                            }

                            .step-item {
                                display: flex;
                                align-items: flex-start;
                                gap: 20px;
                                background: #fff;
                                border: 1px solid #eee;
                                padding: 30px;
                                border-radius: 12px;
                                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.02);
                            }

                            .step-number {
                                flex-shrink: 0;
                                width: 50px;
                                height: 50px;
                                background: #1fa2ff;
                                color: white;
                                border-radius: 50%;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                font-size: 1.5rem;
                                font-weight: bold;
                            }

                            .step-content h3 {
                                margin-top: 0;
                                color: #333;
                                font-size: 1.4rem;
                                margin-bottom: 15px;
                            }

                            .step-content p {
                                color: #666;
                                line-height: 1.6;
                                margin-bottom: 0;
                                font-size: 1.05rem;
                            }

                            .faq-item {
                                border-bottom: 1px solid #eee;
                                padding: 25px 0;
                            }

                            .faq-item:last-child {
                                border-bottom: none;
                                padding-bottom: 0;
                            }

                            .faq-question {
                                font-weight: 600;
                                font-size: 1.2rem;
                                color: #1a1a1a;
                                margin-bottom: 10px;
                                display: flex;
                                align-items: flex-start;
                                gap: 10px;
                            }

                            .faq-answer {
                                color: #666;
                                line-height: 1.6;
                                margin: 0;
                                padding-left: 34px;
                            }

                            .cta-buttons {
                                display: flex;
                                justify-content: center;
                                gap: 15px;
                                margin-top: 20px;
                            }

                            @media (max-width: 768px) {
                                .page-header {
                                    padding: 40px 0;
                                }

                                .page-header h1 {
                                    font-size: 2.2rem;
                                }

                                .step-item {
                                    flex-direction: column;
                                }

                                .step-number {
                                    margin-bottom: 15px;
                                }

                                .cta-buttons {
                                    flex-direction: column;
                                }

                                .cta-buttons a {
                                    width: 100%;
                                }

                                .card {
                                    padding: 25px;
                                }
                            }
                        </style>
    </head>

    <body>
        <%- include('partials/header') %>

            <main>
                <header class="page-header">
                    <div class="container">
                        <span class="badge">
                            <%= t.lovart_tutorial_page.hero.badge %>
                        </span>
                        <h1>
                            <%= t.lovart_tutorial_page.hero.title %>
                        </h1>
                        <p>
                            <%= t.lovart_tutorial_page.hero.subtitle %>
                        </p>
                        <div class="cta-buttons">
                            <a href="https://lovart.ai" target="_blank" rel="noopener nofollow"
                                class="btn btn-primary btn-lg">
                                <%= t.lovart_tutorial_page.hero.cta_external %>
                            </a>
                            <a href="<%- link('/lovart-prompt-guide') %>" class="btn btn-dark btn-lg">
                                <%= t.lovart_tutorial_page.hero.cta_internal %>
                            </a>
                        </div>
                    </div>
                </header>

                <section class="content-section">
                    <div class="container" style="max-width: 900px;">

                        <div class="card">
                            <p class="lead"
                                style="font-size: 1.15rem; color: #555; line-height: 1.8; margin-bottom: 0;"><%-
                                    t.lovart_tutorial_page.hero.content %></p>
                        </div>

                        <div class="card">
                            <h2>
                                <%= t.lovart_tutorial_page.getting_started.heading %>
                            </h2>
                            <p style="color: #666; line-height: 1.7; font-size: 1.05rem;">
                                <%= t.lovart_tutorial_page.getting_started.desc %>
                            </p>
                        </div>

                        <%- include('partials/adsense') %>

                            <div class="card">
                                <h2>
                                    <%= t.lovart_tutorial_page.workflows.heading %>
                                </h2>
                                <p style="color: #666; margin-bottom: 30px;">
                                    <%= t.lovart_tutorial_page.workflows.intro %>
                                </p>

                                <div class="step-container">
                                    <% t.lovart_tutorial_page.workflows.steps.forEach(function(step, index) { %>
                                        <div class="step-item">
                                            <div class="step-number">
                                                <%= index + 1 %>
                                            </div>
                                            <div class="step-content">
                                                <h3>
                                                    <%= step.title %>
                                                </h3>
                                                <p>
                                                    <%= step.desc %>
                                                </p>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>

                            <%- include('partials/adsense') %>

                                <div class="card">
                                    <h2>
                                        <%= t.lovart_tutorial_page.troubleshooting.heading %>
                                    </h2>
                                    <p style="color: #555; line-height: 1.7;">
                                        <%= t.lovart_tutorial_page.troubleshooting.desc %>
                                    </p>
                                    <a href="<%- link('/lovart-login') %>" class="btn btn-outline-dark mt-3">Read Login
                                        Help
                                        â†’</a>
                                </div>

                                <div class="card">
                                    <h2>
                                        <%= t.lovart_tutorial_page.support.heading %>
                                    </h2>
                                    <p style="color: #555; line-height: 1.7;">
                                        <%= t.lovart_tutorial_page.support.desc %>
                                    </p>
                                </div>

                                <div class="card" id="faq">
                                    <h2>
                                        <%= t.lovart_tutorial_page.faq.heading %>
                                    </h2>
                                    <div class="faq-list">
                                        <% t.lovart_tutorial_page.faq.items.forEach(function(item) { %>
                                            <div class="faq-item">
                                                <h3 class="faq-question">
                                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                        stroke="#1fa2ff" stroke-width="2" stroke-linecap="round"
                                                        stroke-linejoin="round" style="flex-shrink: 0;">
                                                        <circle cx="12" cy="12" r="10"></circle>
                                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                                    </svg>
                                                    <%= item.q %>
                                                </h3>
                                                <p class="faq-answer">
                                                    <%= item.a %>
                                                </p>
                                            </div>
                                            <% }); %>
                                    </div>
                                </div>

                                <div style="text-align: center; margin-top: 40px;">
                                    <%- include('partials/adsense') %>
                                </div>

                    </div>
                </section>
            </main>

            <%- include('partials/footer') %>
    </body>

    </html>