<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: t.nav.features, href: canonicalUrl }]; const
    featuresPage=t.features_page || {}; const overview=featuresPage.overview || null; const
    workflow=featuresPage.workflow || null; const featureFaq=featuresPage.faq || null; %>
    <html lang="<%= lang %>" class="scroll-smooth">

    <head>
        <%- include('partials/head') %>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                <%= t.features_page.seo.title %>
            </title>
            <meta name="description" content="<%= t.features_page.seo.description %>">
            <meta name="keywords" content="<%= t.features_page.seo.keywords %>">
            <link rel="canonical" href="<%= canonicalUrl %>">
            <%- include('partials/hreflang') %>
                <link rel="stylesheet" href="/styles.css">
                <link rel="icon" href="/favicon.ico" type="image/x-icon">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
                    crossorigin="anonymous"></script>
                <%- include('partials/analytics') %>

                    <style>
                        /* Custom animations or styles not achievable via Tailwind can be placed here */
                        /* .hero-bg-animation {
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        } */

                        @keyframes gradient {
                            0% {
                                background-position: 0% 50%;
                            }

                            50% {
                                background-position: 100% 50%;
                            }

                            100% {
                                background-position: 0% 50%;
                            }
                        }

                        .fade-in {
                            animation: fadeInAnimation ease 2s;
                            animation-iteration-count: 1;
                            animation-fill-mode: forwards;
                        }

                        @keyframes fadeInAnimation {
                            0% {
                                opacity: 0;
                                transform: translateY(20px);
                            }

                            100% {
                                opacity: 1;
                                transform: translateY(0);
                            }
                        }

                        .section-animate {
                            opacity: 0;
                            transform: translateY(30px);
                            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
                        }

                        .section-animate.is-visible {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    </style>

                    <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>

                        <% if (featureFaq && featureFaq.items && featureFaq.items.length) { %>
                            <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    <% featureFaq.items.forEach(function(item, index) { %>
    {
      "@type": "Question",
      "name": "<%= item.q.replace(/"/g, '\\"') %>",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "<%= item.a.replace(/"/g, '\\"') %>"
      }
    }<%= index < featureFaq.items.length - 1 ? ',' : '' %>
    <% }); %>
  ]
}
                        </script>
                            <% } %>

    </head>

    <body class="bg-neutral-light text-neutral-dark antialiased">

