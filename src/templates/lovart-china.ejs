<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: 'lovart china' , href: canonicalUrl }]; %>
    <html lang="<%= lang %>" class="scroll-smooth">

    <head>
        <%- include('partials/head') %>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                <%= t.seo.lovart_china.title %>
            </title>
            <meta name="description" content="<%= t.seo.lovart_china.description %>">
            <meta name="keywords" content="">
            <link rel="canonical" href="<%= canonicalUrl %>">
            <link rel="stylesheet" href="/styles.css">
            <link rel="icon" href="/favicon.ico" type="image/x-icon">
            <script async
                src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
                crossorigin="anonymous"></script>
            <%- include('partials/analytics') %>
                <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>
                    <%- include('partials/hreflang') %>
                        <script type="application/ld+json"><%- JSON.stringify({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": t.lovart_china_page.faq.items.map(function(f) {
            return { "@type": "Question", "name": f.q, "acceptedAnswer": { "@type": "Answer", "text": f.a } };
        })
    }) %></script>
                        <style>
                            .hero-china {
                                background: linear-gradient(135deg, #1a0a0a 0%, #7c1313 40%, #450a0a 100%);
                            }

                            .step-card {
                                background: #fff;
                                border: 1px solid #e5e7eb;
                                border-radius: 0.875rem;
                                padding: 1.25rem;
                            }

                            .step-num {
                                width: 2rem;
                                height: 2rem;
                                background: linear-gradient(135deg, #ef4444, #b91c1c);
                                color: #fff;
                                border-radius: 50%;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                font-weight: 900;
                                font-size: 0.85rem;
                                flex-shrink: 0;
                            }

                            .feature-link-card {
                                background: #fff;
                                border: 1px solid #e5e7eb;
                                border-radius: 0.875rem;
                                padding: 1.25rem;
                                transition: box-shadow 0.2s, border-color 0.2s;
                            }

                            .feature-link-card:hover {
                                box-shadow: 0 4px 20px rgba(220, 38, 38, 0.1);
                                border-color: #fca5a5;
                            }

                            details summary {
                                cursor: pointer;
                                list-style: none;
                            }

                            details summary::-webkit-details-marker {
                                display: none;
                            }

                            .chevron {
                                transition: transform 0.2s;
                            }

                            details[open] .chevron {
                                transform: rotate(180deg);
                            }

                            .bilingual-badge {
                                background: linear-gradient(90deg, #ef4444, #f97316);
                                -webkit-background-clip: text;
                                background-clip: text;
                                -webkit-text-fill-color: transparent;
                            }
                        </style>
    </head>

    <body class="bg-neutral-light text-neutral-dark antialiased">
        <%- include('partials/header') %>
            <%- include('partials/breadcrumb', { breadcrumbItems }) %>
                <main>

