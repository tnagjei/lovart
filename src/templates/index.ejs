                        box-sizing: border-box;
                    }

                    body {
                        margin: 0;
                        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                        line-height: 1.6;
                        color: #333;
                        background-color: #f9fafb;
                    }

                    /* Layout Utilities */
                    .container {
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 0 1.5rem;
                    }

                    .flex {
                        display: flex;
                    }

                    .justify-between {
                        justify-content: space-between;
                    }

                    .items-center {
                        align-items: center;
                    }

                    .hidden {
                        display: none;
                    }

                    @media (min-width: 768px) {
                        .md\:flex {
                            display: flex;
                        }

                        .md\:hidden {
                            display: none;
                        }
                    }

                    /* Header Critical */
                    .sticky {
                        position: sticky;
                    }

                    .top-0 {
                        top: 0;
                    }

                    .z-50 {
                        z-index: 50;
                    }

                    .bg-white {
                        background-color: #ffffff;
                    }

                    .shadow-md {
                        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                    }

                    .text-3xl {
                        font-size: 1.875rem;
                        line-height: 2.25rem;
                    }

                    .font-bold {
                        font-weight: 700;
                    }

                    .text-primary {
                        color: #4f46e5;
                    }

                    /* Hero Critical */
                    .bg-gradient-to-br {
                        background-image: linear-gradient(to bottom right, #4f46e5, #ec4899);
                    }

                    .text-white {
                        color: #ffffff;
                    }

                    .text-center {
                        text-align: center;
                    }

                    .py-20 {
                        padding-top: 5rem;
                        padding-bottom: 5rem;
                    }

                    /* Font Optimization */
                    body {
                        font-synthesis: none;
                        text-rendering: optimizeLegibility;
                    }

                    /* Animation Critical - Prevent FOUC and ensure visibility */
                    .animate-fade-in-up {
                        opacity: 0;
                        animation: fade-in-up 0.8s ease-out forwards;
                    }

                    @keyframes fade-in-up {
                        0% {
                            opacity: 0;
                            transform: translateY(20px);
                        }

                        100% {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }
                </style>
