            <script>
                // Performance optimization: Avoid forced synchronous layouts
                document.addEventListener('DOMContentLoaded', function () {
                    // Batch DOM queries - Avoid reflows caused by repeated queries
                    const lazyElements = document.querySelectorAll('.lazy-load, .lazy-video');
                    const mobileMenuButton = document.getElementById('mobile-menu-button');
                    const mobileMenu = document.getElementById('mobile-menu');
                    const currentYearSpan = document.getElementById('currentYear');
                    const sections = document.querySelectorAll('.section-animate');

                    // Use requestAnimationFrame to batch layout-related operations
                    function batchLayoutUpdates() {
                        // Set current year
                        if (currentYearSpan) {
                            currentYearSpan.textContent = new Date().getFullYear();
                        }

                        // Mobile menu event listener
                        if (mobileMenuButton && mobileMenu) {
                            mobileMenuButton.addEventListener('click', () => {
                                mobileMenu.classList.toggle('hidden');
                            });

                            // Batch process menu link events
                            const mobileMenuLinks = mobileMenu.querySelectorAll('a');
                            mobileMenuLinks.forEach(link => {
                                link.addEventListener('click', () => {
                                    mobileMenu.classList.add('hidden');
                                });
                            });
                        }
                    }

                    // Initialize lazy load observer - Use debounce to avoid frequent triggering
                    const lazyLoadObserver = new IntersectionObserver((entries, observer) => {
                        // Use requestAnimationFrame to batch process visible elements
                        requestAnimationFrame(() => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    const lazyElement = entry.target;

                                    if (lazyElement.classList.contains('lazy-load')) {
                                        // Image lazy loading - Avoid synchronous layout queries
                                        lazyElement.src = lazyElement.dataset.src;
                                        lazyElement.onload = () => {
                                            requestAnimationFrame(() => {
                                                lazyElement.classList.add('loaded');
                                                const container = lazyElement.closest('.lazy-load-container');
                                                const loadingIndicator = container ? container.querySelector('.loading-indicator') : lazyElement.parentElement.querySelector('.loading-indicator');
                                                if (loadingIndicator) {
                                                    loadingIndicator.style.display = 'none';
                                                }
                                            });
                                        };
                                    } else if (lazyElement.classList.contains('lazy-video')) {
                                        // Video lazy loading
                                        const source = lazyElement.querySelector('source');
                                        if (source) {
                                            source.src = lazyElement.dataset.src;
                                            lazyElement.load();
                                        }
                                        const container = lazyElement.closest('.lazy-load-container');
                                        const loadingIndicator = container ? container.querySelector('.loading-indicator') : lazyElement.parentElement.querySelector('.loading-indicator');
                                        if (loadingIndicator) {
                                            loadingIndicator.style.display = 'none';
                                        }
                                    }

                                    observer.unobserve(lazyElement);
                                }
                            });
                        });
                    }, { threshold: 0.1, rootMargin: '200px' });

                    // Batch observe lazy load elements
                    lazyElements.forEach(el => {
                        lazyLoadObserver.observe(el);
                    });

                    // Scroll animation observer - Use throttle
                    const scrollObserver = new IntersectionObserver((entries) => {
                        requestAnimationFrame(() => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.classList.add('is-visible');
                                    scrollObserver.unobserve(entry.target);
                                }
                            });
                        });
                    }, {
                        root: null,
                        rootMargin: '0px',
                        threshold: 0.1
                    });

                    // Batch observe scroll animation elements
                    sections.forEach(section => {
                        scrollObserver.observe(section);
                    });

                    // Execute batch layout updates
                    batchLayoutUpdates();

                    // Optimized window resize handling
                    let resizeTimeout;
                    window.addEventListener('resize', () => {
                        clearTimeout(resizeTimeout);
                        resizeTimeout = setTimeout(() => {
                            // Use requestAnimationFrame to ensure execution in the next frame
                            requestAnimationFrame(() => {
                                // Responsive adjustment logic can be added here
                            });
                        }, 150); // 150ms debounce delay
                    });
                });
            </script>
