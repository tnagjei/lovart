        /* Lazy Load Related Styles */
        .loading-indicator {
            transition: opacity 0.3s ease;
        }

        .lazy-load.loaded+.loading-indicator,
        .lazy-video.loaded+.loading-indicator {
            opacity: 0;
            pointer-events: none;
        }

        /* Reserve image space to avoid CLS */
        .lazy-load-container {
            position: relative;
            background: #f3f4f6;
            overflow: hidden;
        }

        .lazy-load {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .lazy-load.loaded {
            opacity: 1;
            position: relative;
        }

        /* Animation Optimization - Avoid initial offset */
        .animate-fade-in-up {
            opacity: 0;
            transform: translateY(0);
            animation: fade-in-up 0.8s ease-out forwards;
        }

