                                            <%= item.icon || 'â“' %>
                                        </div>
                                        <h3 class="font-semibold mb-2">
                                            <%= item.title %>
                                        </h3>
                                        <p class="text-sm opacity-90">
                                            <%= item.desc %>
                                        </p>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </section>

                <% if (supportHelpLinks.length) { %>
                <section class="py-14 bg-neutral-light border-t border-b border-gray-200">
                    <div class="container mx-auto px-6">
                        <div class="max-w-6xl mx-auto">
                            <h2 class="text-2xl font-bold text-neutral-dark mb-3 text-center">
                                <%= supportCluster.help_section_title || 'Support & Policy Navigation' %>
