</head>

<body class="bg-neutral-light text-neutral-dark antialiased">

    <%- include('partials/header') %>

        <%- include('partials/breadcrumb', { breadcrumbItems }) %>
            <main>
                <section class="bg-gradient-to-br from-primary to-secondary text-white py-16">
                    <div class="container mx-auto px-6 text-center">
                        <h1 class="text-4xl md:text-5xl font-bold mb-6">
                            <%= helpPage.hero.title %>
                        </h1>
                        <p class="text-lg md:text-xl max-w-3xl mx-auto mb-8">
                            <%= helpPage.hero.desc %>
                        </p>

                        <div class="max-w-2xl mx-auto search-box">
                            <div class="relative">
                                <input id="help-search-input" type="text" placeholder="<%= helpPage.hero.search_placeholder %>"
                                    class="w-full px-6 py-4 pr-12 rounded-lg text-neutral-dark focus:outline-none focus:ring-2 focus:ring-white">
                                <button id="help-search-trigger"
                                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-neutral-dark hover:text-primary transition-colors"
                                    aria-label="Search help">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                    </svg>
                                </button>
                            </div>
                            <p id="help-search-notice" class="text-sm text-white/90 mt-3">
                                <%= helpPage.hero.search_hint %>
                            </p>
                            <% if (searchKeywords.length) { %>
                                <div class="flex flex-wrap justify-center gap-2 mt-4">
                                    <% searchKeywords.forEach(function(keyword) { %>
                                        <button type="button"
                                            class="help-search-tag bg-white/20 hover:bg-white/30 px-3 py-1 rounded-full text-sm"
                                            data-keyword="<%= keyword %>">
                                            <%= keyword %>
                                        </button>
                                        <% }) %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </section>

                <section class="py-12 bg-white">
                    <div class="container mx-auto px-6">
                        <div class="max-w-6xl mx-auto">
                            <h2 class="text-2xl font-bold text-neutral-dark mb-8 text-center">
                                <%= helpPage.quick_help.title %>
                            </h2>
                            <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-6">
