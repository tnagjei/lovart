                <section class="py-16 bg-primary text-white">
                    <div class="container mx-auto px-6">
                        <div class="max-w-4xl mx-auto text-center">
                            <h2 class="text-3xl font-bold mb-4">
                                <%= helpPage.contact.title %>
                            </h2>
                            <p class="text-lg mb-8 opacity-90">
                                <%= helpPage.contact.desc %>
                            </p>

                            <div class="grid md:grid-cols-2 gap-6 mb-8">
                                <div class="bg-white bg-opacity-10 p-6 rounded-lg">
                                    <div class="text-3xl mb-3">ðŸ“§</div>
                                    <h3 class="text-xl font-semibold mb-2">
                                        <%= helpPage.contact.email.title %>
                                    </h3>
                                    <p class="text-sm opacity-80 mb-4">
                                        <%= helpPage.contact.email.desc %>
                                    </p>
                                    <a href="mailto:support@lovart.ai"
                                        class="bg-white text-primary px-4 py-2 rounded-md hover:bg-opacity-90 transition-colors inline-block font-medium">
                                        <%= helpPage.contact.email.button %>
                                    </a>
                                </div>

                                <div class="bg-white bg-opacity-10 p-6 rounded-lg">
                                    <div class="text-3xl mb-3">ðŸ’¬</div>
                                    <h3 class="text-xl font-semibold mb-2">
                                        <%= helpPage.contact.community.title %>
                                    </h3>
                                    <p class="text-sm opacity-80 mb-4">
