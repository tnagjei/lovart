                            <div class="grid md:grid-cols-3 gap-8">
                                <% gettingStartedSteps.forEach(function(step, index) { %>
                                    <% const numClass = index === 0 ? 'bg-primary' : index === 1 ? 'bg-secondary' : 'bg-green-500'; %>
