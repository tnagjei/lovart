                            <p class="text-neutral text-center mb-8">
                                <%= supportCluster.help_section_desc || 'Use these routing guides to reach official Lovart channels quickly.' %>
                            </p>
                            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
                                <% supportHelpLinks.forEach(function(item) { %>
                                <a href="<%= link(item.path + '.html') %>" class="bg-white p-5 rounded-lg border border-gray-200 hover:border-primary hover:shadow-md transition-all">
                                    <h3 class="text-lg font-semibold text-neutral-dark mb-1"><%= item.title %></h3>
                                    <p class="text-sm text-neutral"><%= item.desc %></p>
                                </a>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </section>
                <% } %>

                <section class="py-16 bg-neutral-light">
                    <div class="container mx-auto px-6">
                        <div class="max-w-6xl mx-auto">
                            <h2 class="text-2xl font-bold text-neutral-dark mb-8">
                                <%= helpPage.getting_started.title %>
