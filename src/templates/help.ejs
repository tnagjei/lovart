                                    <%= helpPage.contact.quick_search.title %>
                                </h3>
                                <div class="flex flex-wrap gap-2 justify-center">
                                    <% quickSearchTags.forEach(function(tag) { %>
                                        <button type="button"
                                            class="help-search-tag bg-white bg-opacity-20 px-3 py-1 rounded-full text-sm hover:bg-opacity-30"
                                            data-keyword="<%= tag %>">
