                                                <%= index + 1 %>
                                            </div>
                                            <h3 class="text-xl font-semibold text-neutral-dark mb-3">
                                                <%= step.title %>
                                            </h3>
                                            <p class="text-neutral mb-4">
                                                <%= step.desc %>
                                            </p>
                                            <ul class="text-sm text-neutral space-y-1 mb-4">
                                                <% step.list.forEach(function(item) { %>
                                                    <li>â€¢ <%= item %>
                                                    </li>
                                                    <% }) %>
                                            </ul>
                                            <a href="<%= link('help.html') %>" class="text-primary hover:text-primary-dark font-medium text-sm">
                                                <%= step.link %> â†’
                                            </a>
                                        </div>
                                        <% }) %>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="container mx-auto px-6">
                    <div class="ad-slot-container">
                        <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-3083296102953963"
                            data-ad-slot="7744440876" data-ad-format="auto" data-full-width-responsive="true"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </div>
                </section>

                <section id="help-faq" class="py-16 bg-white">
                    <div class="container mx-auto px-6">
                        <div class="max-w-4xl mx-auto">
                            <h2 class="text-2xl font-bold text-neutral-dark mb-8 text-center">
                                <%= helpPage.faq.title %>
                            </h2>

                            <div class="space-y-4">
                                <% faqItems.forEach(function(item) { %>
                                    <div class="faq-item bg-neutral-light p-6 rounded-lg" x-data="{ open: false }">
                                        <button @click="open = !open"
                                            class="w-full flex justify-between items-center text-left">
                                            <h3 class="text-lg font-semibold text-neutral-dark">
                                                <%= item.question %>
                                            </h3>
                                            <svg :class="{'transform rotate-180': open}"
                                                class="w-5 h-5 text-primary transition-transform duration-300" fill="none"
                                                stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </button>
                                        <div x-show="open" x-transition class="mt-4 text-neutral">
                                            <%- item.answer %>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>

                            <% if (helpPage.faq_cta) { %>
                                <div class="mt-10 bg-neutral-light rounded-lg p-6 text-center">
                                    <h3 class="text-xl font-semibold text-neutral-dark mb-3">
                                        <%= helpPage.faq_cta.title %>
                                    </h3>
                                    <p class="text-neutral mb-6">
                                        <%= helpPage.faq_cta.desc %>
                                    </p>
                                    <div class="flex flex-wrap justify-center gap-3">
                                        <a href="<%= link('lovart-pricing.html') %>"
                                            class="bg-primary text-white px-6 py-3 rounded-md hover:bg-primary-dark transition-colors font-medium">
                                            <%= helpPage.faq_cta.primary_button %>
                                        </a>
                                        <a href="<%= link('lovart-free.html') %>"
                                            class="bg-white border border-neutral-light text-neutral-dark px-6 py-3 rounded-md hover:bg-neutral-light transition-colors font-medium">
                                            <%= helpPage.faq_cta.secondary_button %>
                                        </a>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </section>

                <section class="py-16 bg-neutral-light">
                    <div class="container mx-auto px-6">
                        <div class="max-w-6xl mx-auto">
                            <h2 class="text-2xl font-bold text-neutral-dark mb-8 text-center">
                                <%= helpPage.videos.title %>
                            </h2>
                            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                                <% videoItems.forEach(function(video, index) { %>
                                    <% const media = videoImageSet[index] || videoImageSet[videoImageSet.length - 1]; %>
                                        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                                            <div class="relative">
                                                <picture>
                                                    <source type="image/webp" srcset="<%= media.webp %>">
                                                    <img src="<%= media.fallback %>" alt="<%= media.alt %>"
                                                        class="w-full h-48 object-cover">
                                                </picture>
                                                <div
                                                    class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                                                    <div
                                                        class="w-16 h-16 bg-white bg-opacity-90 rounded-full flex items-center justify-center">
                                                        <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                                            <path
                                                                d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z">
                                                            </path>
                                                        </svg>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="p-6">
                                                <h3 class="text-lg font-semibold text-neutral-dark mb-2">
                                                    <%= video.title %>
                                                </h3>
                                                <p class="text-neutral text-sm mb-3">
                                                    <%= video.desc %>
                                                </p>
                                                <div class="flex items-center text-sm text-neutral">
                                                    <span>
                                                        <%= video.duration %>
                                                    </span>
