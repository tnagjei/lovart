<!DOCTYPE html>
<%
const breadcrumbItems = [{ name: t.nav.home, href: link('/') }, { name: t.nav.help, href: canonicalUrl }];
const helpPage = t.help_page || {};
const supportCluster = t.support_cluster || {};
const supportHelpLinks = Array.isArray(supportCluster.help_links) ? supportCluster.help_links : [];
const quickHelpItems = (helpPage.quick_help && helpPage.quick_help.items) ? helpPage.quick_help.items : [];
const gettingStartedSteps = (helpPage.getting_started && helpPage.getting_started.steps) ? helpPage.getting_started.steps : [];
const faqItems = (helpPage.faq && helpPage.faq.items) ? helpPage.faq.items : [];
const videoItems = (helpPage.videos && helpPage.videos.items) ? helpPage.videos.items : [];
const searchKeywords = (helpPage.hero && helpPage.hero.search_keywords) ? helpPage.hero.search_keywords : [];
const quickSearchTags = (helpPage.contact && helpPage.contact.quick_search && helpPage.contact.quick_search.tags)
    ? helpPage.contact.quick_search.tags
    : [];
const quickHelpBgClasses = ['bg-primary', 'bg-secondary', 'bg-green-500', 'bg-orange-500', 'bg-indigo-500'];
const videoImageSet = [
    { webp: '/images/02.webp', fallback: '/images/02.png', alt: 'Help tutorial 1' },
    { webp: '/images/03.webp', fallback: '/images/03.jpg', alt: 'Help tutorial 2' },
    { webp: '/images/small_03.webp', fallback: '/images/small_03.jpg', alt: 'Help tutorial 3' },
];
%>
<html lang="<%= lang %>" class="scroll-smooth">

<head>
    <%- include('partials/head') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= helpPage.seo.title %>
        </title>
        <meta name="description" content="<%= helpPage.seo.description %>">
        <meta name="keywords" content="<%= helpPage.seo.keywords %>">
        <link rel="canonical" href="<%= canonicalUrl %>">
        <%- include('partials/hreflang') %>
