<!DOCTYPE html>
<% const breadcrumbItems=[{ name: t.nav.home, href: link('/') }, { name: t.nav.about, href: canonicalUrl }]; %>
    <html lang="<%= lang %>" class="scroll-smooth">

    <head>
        <%- include('partials/head') %>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                <%= t.about_page.seo.title %>
            </title>
            <meta name="description" content="<%= t.about_page.seo.description %>">
            <meta name="keywords" content="<%= t.about_page.seo.keywords %>">
            <link rel="canonical" href="<%= canonicalUrl %>">
            <%- include('partials/hreflang') %>
                <link rel="stylesheet" href="/styles.css">
                <link rel="icon" href="/favicon.ico" type="image/x-icon">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3083296102953963"
                    crossorigin="anonymous"></script>

                <%- include('partials/analytics') %>

                    <style>
                        .section-animate {
                            opacity: 0;
                            transform: translateY(30px);
                            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
                        }

                        .section-animate.is-visible {
                            opacity: 1;
                            transform: translateY(0);
                        }

                        .team-card {
                            transition: all 0.3s ease;
                        }

                        .team-card:hover {
                            transform: translateY(-5px);
                        }

                        .value-card {
                            transition: all 0.3s ease;
                        }

                        .value-card:hover {
                            transform: scale(1.05);
                        }

                        .timeline-item {
                            position: relative;
                        }

                        .timeline-item::before {
                            content: '';
                            position: absolute;
                            left: -8px;
                            top: 8px;
                            width: 16px;
                            height: 16px;
                            background: #4f46e5;
                            border-radius: 50%;
                        }

                        .timeline-line {
                            position: absolute;
                            left: 0;
                            top: 24px;
                            bottom: 0;
                            width: 2px;
                            background: #e5e7eb;
                        }
                    </style>

                    <%- include('partials/schema-breadcrumb', { breadcrumbItems }) %>

    </head>

    <body class="bg-neutral-light text-neutral-dark antialiased">

        <!-- Header -->
        <%- include('partials/header') %>

            <%- include('partials/breadcrumb', { breadcrumbItems }) %>
                <main>
                    <!-- Hero Section -->
                    <section class="bg-gradient-to-br from-primary to-secondary text-white py-20">
                        <div class="container mx-auto px-6">
                            <div class="max-w-4xl mx-auto text-center">
                                <h1 class="text-4xl md:text-5xl font-bold mb-6">
                                    <%= t.about_page.hero.title %>
                                </h1>
                                <p class="text-lg md:text-xl mb-8 opacity-90">
                                    <%= t.about_page.hero.desc %>
                                </p>
                                <div class="flex flex-wrap justify-center gap-4 text-sm mb-10">
                                    <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full">
                                        üåç <%= t.about_page.hero.stats[0] %>
                                    </div>
                                    <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full">
                                        üë• <%= t.about_page.hero.stats[1] %>
                                    </div>
                                    <div class="bg-white bg-opacity-20 px-4 py-2 rounded-full">
                                        ü§ñ <%= t.about_page.hero.stats[2] %>
                                    </div>
                                </div>
                                <div class="flex justify-center">
                                    <a href="<%= link('lovart-design-features') %>"
                                        class="bg-white text-primary px-8 py-3 rounded-md font-bold hover:bg-opacity-90 transition-all transform hover:scale-105">
                                        <%= t.about_page.hero.cta_features %>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Mission Section -->
                    <section class="py-16 bg-white">
                        <div class="container mx-auto px-6">
                            <div class="max-w-4xl mx-auto text-center">
                                <h2 class="text-3xl font-bold text-neutral-dark mb-8">
                                    <%= t.about_page.mission.title %>
                                </h2>
                                <p class="text-lg text-neutral mb-8 leading-relaxed">
                                    <%= t.about_page.mission.desc %>
                                </p>
                                <div class="grid md:grid-cols-3 gap-8 mt-12">
                                    <% t.about_page.mission.values.forEach(function(value, index) { var
                                        bgs=['bg-primary', 'bg-secondary' , 'bg-green-500' ]; var icons=['üéØ', '‚ö°'
                                        , 'ü§ù' ]; %>
